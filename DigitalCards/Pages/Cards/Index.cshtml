@page
@model DigitalCards.Pages.Cards.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Card
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].CardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].CardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card[0].Price)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Card[0].isFeatured)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Card) {

        string imagePath = "/images/" + item.ImageName;       

        <tr>    
            <td>
                <img src="@imagePath" class="img-fluid" width="200"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.isFeatured)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CardID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CardID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
